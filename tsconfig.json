{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "ES6",
    "declaration": false,
    "declarationMap": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "jsx": "react",
    "outDir": "./build",
    "rootDir": ".",
    "importHelpers": true,
    "esModuleInterop": true,
    "paths": {
      "@epam/test-utils": [
        "test-utils"
      ]
    },
    "baseUrl": ".",
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "./templates",
    "./next-app",
    "**/node_modules",
    "**/build",
    "**/__tests__",
    "**/globals.d.ts"
  ]
}
